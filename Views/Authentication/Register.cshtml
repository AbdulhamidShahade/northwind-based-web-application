@model NorthwindBasedWebApplication.Models.Dtos.AuthenticationDtos.RegisterRequestDto

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>
    <style>
        .input-group-text i {
            padding: 3px;
            font-size: 1.5em; 
        }
    </style>
</head>

<form asp-action="RegisterConfirmed">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Sign Up</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="UserName" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bx-user'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="UserName" />
                </div>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Email" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bx-envelope'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="Email" />
                </div>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="Password" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bx-lock'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="Password" type="password" />
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="col-5 offset-2">
                <input type="submit" value="Sign Up" class="btn btn-success form-control" />
            </div>

            <div class="col-5">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">Back to Home</a>
            </div>

        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
