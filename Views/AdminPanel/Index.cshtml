@model List<NorthwindBasedWebApplication.Models.Dtos.CategoryDtos.ReadCategoryDto>

@{
    ViewData["Navbar"] = true;
}

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .sidebar {
            min-width: 250px;
            max-width: 250px;
            background-color: #343a40;
            color: white;
            height: 100vh;
            position: fixed;
            top: 0;
            left: 0;
            padding-top: 1rem;
        }

            .sidebar a {
                color: white;
                text-decoration: none;
                padding: 0.75rem 1.25rem;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

                .sidebar a.active {
                    background-color: #007bff;
                }

        .content {
            margin-left: 250px;
            padding: 2rem;
        }

        .navbar-toggler {
            border: none;
            background: transparent;
        }
    </style>
</head>
<body>
    <div class="d-flex">
        <!-- Sidebar -->
        <nav class="sidebar">
            <div class="d-flex flex-column align-items-start">
                <h2 class="text-white ms-3">Admin Panel</h2>
                <a asp-controller="Category" asp-action="Index" class="active"><i class="bx bx-home-alt"></i>Categories</a>
                <a asp-controller="Product" asp-action"Index"><i class="bx bx-dashboard"></i> Products</a>
                <a href="#"><i class="bx bx-user"></i> Friends</a>
                <a href="#"><i class="bx bx-credit-card"></i> Subscription</a>
                <a href="#"><i class="bx bx-cog"></i> Settings</a>
                <a href="#"><i class="bx bx-info-circle"></i> Information</a>
            </div>
        </nav>

        

        <div class="content">
            <h4 class="pb-3">Categories</h4>
            <div class="table-responsive">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Category Id</th>
                            <th>Category Name</th>
                            <th>Description</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.CategoryName</td>
                                <td>@item.Description</td>
                                <td>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm" style="margin-right:0.3rem;">Read</a>
                                    <a asp-action="Update" asp-route-id="@item.Id" class="btn btn-warning btn-sm" style="margin-right:0.3rem;">Edit</a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Delete</a>
                                </td>
                            </tr>
                        }

                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
