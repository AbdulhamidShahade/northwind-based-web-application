@model NorthwindBasedWebApplication.Models.Dtos.ProductDtos.UpdateProductDto

<head>
    <link href='https://unpkg.com/boxicons@2.1.4/css/boxicons.min.css' rel='stylesheet'>


    <style>
        .input-group-text i {
            padding: 3px;
            font-size: 1.5em; 
        }

    </style>

</head>





<style>

</style>

<form asp-action="Update">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Villa Number</h1>
        <hr />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>


            <div class="col-2">
                <label asp-for="Id" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bx-id-card'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="Id" />
                </div>
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ProductName" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bx-id-card'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="ProductName" />
                </div>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="QuantityPerUnit" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bx-buildings'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="QuantityPerUnit" />
                </div>
                <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
            </div>



            <div class="col-2">
                <label asp-for="UnitPrice" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bxs-contact'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="UnitPrice" />
                </div>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="UnitsInStock" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bx-id-card'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="UnitsInStock" />
                </div>
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="UnitsOnOrder" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bxs-conversation'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="UnitsOnOrder" />
                </div>
                <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
            </div>

            <div class="col-2">
                <label asp-for="ReorderLevel" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
