                    <input class="form-control" asp-for="SupplierId" />
                </div>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>


            <div class="col-2">
                <label asp-for="PictureUrl" class="control-label" style="font-size:1.3rem"></label>
            </div>
            <div class="col-10 pb-3">
                <div class="input-group">
                    <div class="input-group-prepend">
                        <span class="input-group-text">
                            <i class='bx bx-barcode'></i>
                        </span>
                    </div>
                    <input class="form-control" asp-for="PictureUrl" />
                </div>
                <span asp-validation-for="PictureUrl" class="text-danger"></span>
            </div>


            <div class="col-5 offset-2">
                <input type="submit" value="Update" class="btn btn-warning form-control" />
            </div>

            <div class="col-5">
                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">Back To Products</a>
            </div>

        </div>
    </div>

</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}