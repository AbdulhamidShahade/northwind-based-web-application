@model List<NorthwindBasedWebApplication.Models.Dtos.CategoryDtos.ReadCategoryDto>

<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        @foreach (var category in Model)
        {
            <div class="col">
                <div class="card h-100">
                    <a asp-controller="Product" asp-action="Details" asp-route-id="@category.Id"><img src="@category.PictureUrl" class="card-img-top" alt="@category.CategoryName"></a>
                    <div class="card-header">
                        <h5>@category.CategoryName</h5>
                    </div>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">@category.Description</li>
                    </ul>
                </div>
            </div>
        }
    </div>
</div>
